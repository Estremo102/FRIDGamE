@model FRIDGamE.Models.News

@{
    ViewData["Title"] = "Szczegóły";
}

<h1>
    @Html.DisplayFor(model => model.Headline)
</h1>

<div>
    <h4>
        @Html.DisplayFor(model => model.AddDate)
    </h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Author.IdentityUser.UserName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edytuj</a> |
    <a class="btn btn-outline-secondary" asp-action="Index">Powrót</a>
</div>
