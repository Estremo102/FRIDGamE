@model FRIDGamE.Models.Customer

@{
    ViewData["Title"] = "Konto";
}

<h1>Biblioteka</h1>

<div>
    <h4>Posiadane gry</h4>
    @if (((List<string>)ViewData["Games"]).Count == 0)
    {
        <div>
            Brak posiadanych gier
        </div>
    }
    else
    {
        @foreach (var item in (List<string>)ViewData["Games"])
        {
            <div>@item</div>
        }
    }

    <hr />

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Balans Konta
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Balance)zł
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-success" asp-action="Payment" asp-route-id="@Model?.CustomerId">Wpłać środki</a>
</div>
