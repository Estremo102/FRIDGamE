@model FRIDGamE.Models.Promotion

@{
    ViewData["Title"] = "Edytuj";
}

<h1>Edytuj</h1>

<h4>Promocje</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="GameNameId" class="control-label"></label>
                <select asp-for="GameNameId" class="bg-dark text-light form-control" asp-items="ViewBag.GameNameId"></select>
                <span asp-validation-for="GameNameId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Discount" class="control-label"></label>
                <input asp-for="Discount" class="bg-dark text-light form-control" />
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartOfPromotion" class="control-label"></label>
                <input asp-for="StartOfPromotion" class="bg-dark text-light form-control" />
                <span asp-validation-for="StartOfPromotion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndOfPromotion" class="control-label"></label>
                <input asp-for="EndOfPromotion" class="bg-dark text-light form-control" />
                <span asp-validation-for="EndOfPromotion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class ="btn btn-outline-secondary" asp-action="Index">Powrót</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
