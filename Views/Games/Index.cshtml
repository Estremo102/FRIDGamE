@model List<Game>
@{

    <a class="btn btn-primary" asp-area="" asp-controller="Games" asp-action="GamesForm">Dodaj</a>
    @if (Model != null)
    {

        <table class="table">
            @foreach (Game game in @Model)
            {
                <tr>
                    <td>@game.GameName</td>
                    <td>@game.RegularPrice</td>
                </tr>
            }
        </table>
    }
    else
    {
        <div>brak gier</div>
    }
}
