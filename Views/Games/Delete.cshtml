@model FRIDGamE.Models.Game

@{
    ViewData["Title"] = "Delete";
}

<h1>Usuń</h1>

<h3>
    Czy na pewno chcesz usunąć grę @Html.DisplayFor(model => model.GameName)?
</h3>
<div>
    <h4>Spowoduje to zniesienie zabezpieczenia DRM aby osoby które ją kupiły nie utraciły dostępu do posiadanej zawartości</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Studio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Studio.DeveloperName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GamePublisher)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GamePublisher.PublisherName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RegularPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RegularPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index">Powrót</a>
    </form>
</div>
