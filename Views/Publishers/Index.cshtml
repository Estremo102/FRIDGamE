@model IEnumerable<FRIDGamE.Models.Publisher>

@{
    ViewData["Title"] = "Wydawcy";
}

<h1>WYDAWCY</h1>

<p>
    <a asp-action="Create">Dodaj nowe dane wydawcy</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nazwa firmy
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NIP)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PublisherName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NIP)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edytuj</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Szczegóły</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
