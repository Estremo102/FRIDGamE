@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Weryfikacja adresu Email";
}

<h1>@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
        <p>
            Ta aplikacja nie ma obecnie zarejestrowanego prawdziwego nadawcy wiadomości e-mail<br/>
            Normalnie byłoby to wysłane e-mailem: <a id="confirm-link" href="@Model.EmailConfirmationUrl">Kliknij aby zweryfikować konto</a>
        </p>
    }
    else
    {
        <p>
            Sprawdź swoją skrzynkę e-mail, aby potwierdzić swoje konto.
        </p>
    }
}

