@model FRIDGamE.Models.Promotion

@{
    ViewData["Title"] = "Dodaj promocję";
}

<h1>Utwórz promocję</h1>

<h4>Daj graczom szansę zdobyć grę po niższej cenie</h4>
@if (ViewData["Success"] is not null && !(bool)ViewData["Success"])
{
    switch (ViewData["Error"])
    {
        case "1":
            <div class="text-danger">już trwa promocja na grę w tym okresie</div>
            break;
        case "2":
            <div class="text-danger">Start promocji musi być wcześniej niż jej koniec</div>
            break;
        default:
            <div class="text-danger">Nieznany błąd</div>
            break;
    }
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GameNameId" class="control-label"></label>
                <select asp-for="GameNameId" class="bg-dark text-light form-control" asp-items="ViewBag.GameNameId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Discount" class="control-label"></label>
                <input asp-for="Discount" class="bg-dark text-light form-control" />
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartOfPromotion" class="control-label"></label>
                <input asp-for="StartOfPromotion" class="bg-dark text-light form-control" />
                <span asp-validation-for="StartOfPromotion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndOfPromotion" class="control-label"></label>
                <input asp-for="EndOfPromotion" class="bg-dark text-light form-control" />
                <span asp-validation-for="EndOfPromotion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-secondary" asp-action="Index">Powrót</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
