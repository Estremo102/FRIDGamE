@model IEnumerable<FRIDGamE.Models.Developer>

@{
    ViewData["Title"] = "Twórcy";
}

<h1>TWÓRCY</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Dodaj nowe dane dewelopera</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nazwa studia
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NIP)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DeveloperName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NIP)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id">Edytuj</a>
                    <a asp-action="Details" class="btn btn-info" asp-route-id="@item.Id">Szczegóły</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
