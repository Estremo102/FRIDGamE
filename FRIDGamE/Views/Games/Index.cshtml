@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@model IEnumerable<FRIDGamE.Models.Game>
@inject UserManager<FRIDGamEUser> UserManager

@{
    ViewData["Title"] = "Sklep";
    var customer = (((List<Customer>)ViewData["Customers"]).Find(e => e.IdentityUserId == UserManager.GetUserId(User))); 
    //((HashSet<Customer>)ViewData["Customers"]).FirstOrDefault(c => c.IdentityUserId == UserManager.GetUserId(User));
}

<h1>SKLEP</h1>
@if ((await AuthorizationService.AuthorizeAsync(User, "RequireAdmin")).Succeeded)
{
    <p>
        <a class="btn btn-success" asp-action="Create">Dodaj nową grę</a>
    </p>
}
<table class="table">
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.GameName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegularPrice)zł
                </td>
                @if (item.ReleaseDate > DateTime.Now)
                {
                    <td>
                        Wczesny Dostęp
                    </td>
                }
                else
                {
                    <td></td>
                }
                @if ((await AuthorizationService.AuthorizeAsync(User, "RequireAdmin")).Succeeded)
                {
                    <td>
                        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id">Edytuj</a>
                        <a asp-action="Details" class="btn btn-info" asp-route-id="@item.Id">Szczegóły</a>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Usuń</a>
                        @if (item.Owners.Contains(customer))
                        {
                            <a class="btn btn-outline-success">Kupiono</a>
                        }
                        else
                        {
                            <a asp-action="Buy" class="btn btn-success" asp-route-id="@item.Id">Kup</a>
                        }
                    </td>
                }
                else
                {
                    <td>
                        <a asp-action="Details" class="btn btn-info" asp-route-id="@item.Id">Szczegóły</a>
                        @if (item.Owners.Contains(customer))
                        {
                            <a class="btn btn-outline-success">Kupiono</a>
                        }
                        else
                        {
                            <a asp-action="Buy" class="btn btn-success" asp-route-id="@item.Id">Kup</a>
                        }
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
