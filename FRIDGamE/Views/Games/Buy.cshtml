@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@model FRIDGamE.Models.Game
@inject UserManager<FRIDGamEUser> UserManager


@{
    ViewData["Title"] = "Kup grę";
}

<h1>@Html.DisplayFor(model => model.GameName)</h1>

<div>
    <h4>
        @Html.DisplayFor(model => model.Description)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Studio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Studio.DeveloperName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GamePublisher)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GamePublisher.PublisherName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RegularPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RegularPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>
    </dl>
</div>
<div>
    <form asp-action="BuyConfirmed" method="post">
        <input type="hidden" value="@Model.Id" name="GameId" />
        <input type="hidden" name="UserId" value="@UserManager.GetUserId(User)"/>
        <div class="form-group">
            <input type="submit" value="Kup" class="btn btn-success" />
        </div>
    </form>
    <a class="btn btn-outline-secondary" asp-action="Index">Powrót</a>
</div>
